@model X20240408.EntidadesDeNegocio.PersonaX

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimientoX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimientoX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SueldoX)
        </dt>
        <dd class="col-sm-10">
            @if (Model.StatusX == 1)
            {
                @Html.Raw("Activo")
            }
            else
            {
                @Html.Raw("Inactivo")
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComentarioX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComentarioX)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    <a asp-action="Index" class="btn btn-warning">Regresar</a>
</div>
