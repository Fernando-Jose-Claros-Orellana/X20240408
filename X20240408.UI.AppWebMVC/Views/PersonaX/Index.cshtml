@model IEnumerable<X20240408.EntidadesDeNegocio.PersonaX>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio Personas</h1>

<form asp-action="Index">
    <div class="row">
        <div class="form-group col-3">
            <label class="control-label">Nombre</label>
            <input type="text" name="nombre" class="form-control" />
        </div>
        <div class="form-group col-3">
            <label class="control-label">Apellido</label>
            <input type="text" name="apellido" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a asp-action="Create" class="btn btn-primary">Crear</a>
        </div>
    </div>
</form>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimientoX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComentarioX)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimientoX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusX)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComentarioX)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
